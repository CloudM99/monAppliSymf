{% extends 'base.html.twig' %}


{% block title %}
    Gestion des distributeurs
{% endblock %}


{% block body %}
    {# Affichage des messages flash #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <a href="{{ path('liste') }}" class="btn btn-primary mb-3">Accueil</a>

    <h1>Gestion des distributeurs</h1>

    <h2>Liste des distributeurs</h2>
    <ul>
        {% for distributeur in distributeurs %}
            <li>
                {{ distributeur.nom }}
                <a href="{{ path('delete_distributeur', {'id': distributeur.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>
            </li>
        {% endfor %}
    </ul>

    <h2>Ajouter un nouveau distributeur</h2>
<div class="d-flex justify-content-center">
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="form-group">
        {{ form_label(form.nom) }}
        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.nom) }}
    </div>
    <div class="mt-3">
        {{ form_row(form.creer, {'attr': {'class': 'btn btn-info'}}) }}
    </div>


    {{ form_end(form) }}
</div>

{% endblock %}