{% extends 'base.html.twig' %}

{% block title %}
    Distributeur
{% endblock %}

{% block body %}

<div class="d-flex justify-content-center">
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="form-group">
        {{ form_label(form.nom) }}
        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.nom) }}
    </div>
    <div class="mt-3">
        {{ form_row(form.creer, {'attr': {'class': 'btn btn-info'}}) }}
    </div>
    {{ form_end(form) }}
</div>

{% endblock %}